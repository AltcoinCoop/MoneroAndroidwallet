<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></android.support.v7.widget.CardView>
    <TextView
        android:text="Amount"
        android:textSize="16sp"
        android:id="@+id/amount_title"
        android:textColor="@color/gray_title_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/amount_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.00000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintLeft_toLeftOf="@+id/amount_title"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/amount_title" />

    <TextView
        android:id="@+id/fee_title"
        android:textColor="@color/gray_title_color"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fee:"
        app:layout_constraintBottom_toBottomOf="@+id/amount_title"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/amount_value"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/fee_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00000"
        android:textStyle="italic"
        android:textSize="14sp"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintBottom_toBottomOf="@+id/amount_value"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/fee_title"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/fee_title" />

    <TextView
        android:id="@+id/date"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="2017-05-22"
        app:layout_constraintRight_toLeftOf="@+id/button2"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/fee_title" />

    <TextView
        android:id="@+id/time"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="11:52:20"
        app:layout_constraintRight_toLeftOf="@+id/button2"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/fee_value"
        android:layout_marginBottom="-1dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="74dp"
        android:layout_height="38dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimary"
        android:text="Details"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amount_title" />


</android.support.constraint.ConstraintLayout>
